{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": false,
    "paths": {
      "shared/*": ["../web/shared/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "references": [
    { "path": "../web/shared" }
  ]
}
